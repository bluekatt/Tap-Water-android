<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_record">

    <fragment
        android:id="@+id/navigation_summary"
        android:name="com.android.example.tapwater.ui.summary.SummaryFragment"
        android:label="@string/title_summary"
        tools:layout="@layout/fragment_summary" />

    <fragment
        android:id="@+id/navigation_record"
        android:name="com.android.example.tapwater.ui.record.RecordFragment"
        android:label="@string/title_record"
        tools:layout="@layout/fragment_record" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.android.example.tapwater.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_navigation_settings_to_navigation_app_info"
            app:destination="@id/navigation_app_info"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/navigation_settings" />
    </fragment>
    <fragment
        android:id="@+id/navigation_app_info"
        android:name="com.android.example.tapwater.ui.settings.AppInfoFragment"
        android:label="@string/info_title"
        tools:layout="@layout/fragment_app_info" />

</navigation>